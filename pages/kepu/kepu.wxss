/* pages/kepu/kepu.wxss */
/*顶层标题*/
.title_1{
	display: flex;
	justify-content: center;
	padding-top: 100rpx;
}
/*最外层*/
.body{
	padding-left: 55rpx;
	padding-right: 55rpx;
}

.title{
	padding-left: 55rpx;
	padding-right: 55rpx;
	background-color: #f0f0f0;
	height: 355rpx;
	position:fixed; 
	top:0;
}
.title_img{
	height: 45rpx;
	width: 95rpx;
}

/*按钮小图*/
.kepu{
	margin-top: 25rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}
.tiny_kepu_yes{
	width: 160rpx;
	height: 65rpx;
}
.tiny_kepu_no{
	margin-top: 5rpx;
	width: 150rpx;
	height: 55rpx;
}

/*分割线*/
.line{
	width: 100%;
	height: 5rpx;
}
/*须知大框*/
.notice{
	margin-top: 400rpx;
	width: 100%;
	background-color: #F0F0F0;
	
	border-radius: 40rpx;
	box-shadow: 10rpx 10rpx 20rpx #d1c3b5,-15rpx -15rpx 25rpx #FFFFFF;
}
.notice_img{
	margin:15rpx auto;
	width: 85%;
	background-color: #F0F0F0;
	height: 300rpx;
	border-radius: 40rpx;
	box-shadow: -5rpx -5rpx 20rpx #d1c3b5,12rpx 12rpx 10rpx #FFFFFF;
}