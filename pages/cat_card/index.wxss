/* pages/cat_card/index.wxss */
.body{
  margin: 40rpx;
  margin-top: 180rpx;
}
/*大标题*/
.title_1{
	display: flex;
	justify-content: center;
	padding-top: 100rpx;
}
.title{
	background-color: #f0f0f0;
	height: 170rpx;
	width: 100%;
	position:fixed; 
  top:0;
  z-index: 3;
}
.title_img{
	height: 45rpx;
	width: 196rpx;
}
/*返回按钮*/
.back{
  position: absolute;
  top: 97rpx;
  left: 40rpx;
	width: 50rpx;
	height: 50rpx;
}
/*上卡片设计*/
.card{
  margin-top: 50rpx;
	width: 100%;
	background-color: #F0F0F0;
	height: auto;
	border-radius: 40rpx;
	box-shadow: 10rpx 10rpx 20rpx #d1c3b5,-15rpx -15rpx 25rpx #FFFFFF;
}
/*卡片图片设计*/
.card_img{
	margin:10rpx auto;
	width: 85%;
	background-color: #F0F0F0;
	height: 350rpx;
	border-radius: 40rpx;
	box-shadow: -5rpx -5rpx 20rpx #d1c3b5,12rpx 12rpx 10rpx #FFFFFF;
}
.card_img_tiny{
	width: 100%;
	height: 350rpx;
	border-radius: 40rpx;
}
/*猫咪信息显示*/
.cat_data{
	margin-left: 50rpx;
	margin-top: 40rpx;
	color: #806f6a;
	font-weight: bold;
}
.tiny_data{
	margin-bottom: 20rpx;
	display: flex;
}
.name{
	font-size: 40rpx;
	margin-bottom: 40rpx;
}

/*反馈*/
.feedback{
	margin-right: 50rpx;
	height: 44rpx;
	width: 128rpx;
	background-color: #cfba99;

	box-shadow: 5rpx 5rpx 10rpx #d1c3b5,-5rpx -5rpx 10rpx #FFFFFF;
	border-radius: 10rpx;

	display: flex;
	justify-content: center;
}
.feedback_font{
	color: white;
}