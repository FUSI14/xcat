.title {
	margin-top: 100rpx;
	margin-bottom: 40rpx;
	display: flex;
	justify-content: center;
}

.title_img {
	height: 45rpx;
	width: 196rpx;
}
.container{
	margin-left: 100rpx;
	margin-right: 100rpx;
}
.scrollarea {
	flex: 1;
	overflow-y: hidden;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #aaa;
	width: 80%;
}

.userinfo-avatar {
	overflow: hidden;
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.usermotto {
	margin-top: 200px;
}

.avatar-wrapper {
	padding: 0;
	width: 56px !important;
	border-radius: 8px;
	margin-top: 40px;
	margin-bottom: 40px;
}

.avatar {
	display: block;
	width: 56px;
	height: 56px;
}

.nickname-wrapper {
	display: flex;
	width: 100%;
	padding: 16px;
	box-sizing: border-box;
	border-top: .5px solid rgba(0, 0, 0, 0.1);
	border-bottom: .5px solid rgba(0, 0, 0, 0.1);
	color: black;
}

.nickname-label {
	width: 105px;
}

.nickname-input {
	flex: 1;
}

